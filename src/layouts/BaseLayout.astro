---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "NYC-based DJ bringing the perfect blend of house, hits, and good vibes to your event." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
      * {
        font-family: 'Inter', sans-serif;
      }

      /* Subtle grain texture overlay */
      .grain-overlay {
        position: fixed;
        inset: 0;
        pointer-events: none;
        opacity: 0.03;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
        z-index: 100;
      }

      /* Espresso gradient text */
      .espresso-text {
        background: linear-gradient(135deg, #d4a574 0%, #8b6914 50%, #d4a574 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      /* Steam/Equalizer animation */
      @keyframes steam-rise {
        0% {
          transform: translateY(0) scaleY(0.8);
          opacity: 0;
        }
        20% {
          opacity: 0.6;
        }
        80% {
          opacity: 0.3;
        }
        100% {
          transform: translateY(-60px) scaleY(1.2);
          opacity: 0;
        }
      }

      @keyframes eq-bar {
        0%, 100% {
          transform: scaleY(0.3);
        }
        50% {
          transform: scaleY(1);
        }
      }

      @keyframes pot-glow {
        0%, 100% {
          filter: drop-shadow(0 0 8px rgba(180, 120, 60, 0.2));
        }
        50% {
          filter: drop-shadow(0 0 20px rgba(180, 120, 60, 0.4));
        }
      }

      .steam-bar {
        animation: steam-rise 4s ease-out infinite;
        transform-origin: bottom;
      }
      .steam-bar:nth-child(1) { animation-delay: 0s; }
      .steam-bar:nth-child(2) { animation-delay: 0.6s; }
      .steam-bar:nth-child(3) { animation-delay: 1.2s; }
      .steam-bar:nth-child(4) { animation-delay: 0.3s; }
      .steam-bar:nth-child(5) { animation-delay: 0.9s; }

      .eq-bar {
        animation: eq-bar 1.2s ease-in-out infinite;
        transform-origin: bottom;
      }
      .eq-bar:nth-child(1) { animation-delay: 0s; }
      .eq-bar:nth-child(2) { animation-delay: 0.15s; }
      .eq-bar:nth-child(3) { animation-delay: 0.3s; }
      .eq-bar:nth-child(4) { animation-delay: 0.45s; }
      .eq-bar:nth-child(5) { animation-delay: 0.6s; }

      .moka-pot {
        animation: pot-glow 4s ease-in-out infinite;
      }

      @keyframes wave-drip {
        0% {
          stroke-dashoffset: 200;
          opacity: 0;
        }
        10% {
          opacity: 1;
        }
        90% {
          opacity: 0.8;
        }
        100% {
          stroke-dashoffset: 0;
          opacity: 0;
        }
      }

      .wave-drip {
        stroke-dasharray: 200;
        stroke-dashoffset: 200;
        animation: wave-drip 4s ease-in-out infinite;
      }
      .wave-drip:nth-child(1) { animation-delay: 0s; }
      .wave-drip:nth-child(2) { animation-delay: 0.8s; }
      .wave-drip:nth-child(3) { animation-delay: 1.6s; }
      .wave-drip:nth-child(4) { animation-delay: 2.4s; }
    </style>
  </head>
  <body class="bg-neutral-950 text-neutral-100 min-h-screen flex flex-col">
    <!-- Subtle grain texture -->
    <div class="grain-overlay"></div>

    <!-- Ambient background glow -->
    <div class="fixed inset-0 pointer-events-none overflow-hidden">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-amber-900/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-80 h-80 bg-orange-900/10 rounded-full blur-3xl"></div>
    </div>

    <!-- Animated Bialetti Pouring Waveforms - Bottom Right -->
    <div class="fixed bottom-4 right-4 md:bottom-10 md:right-10 pointer-events-none opacity-[0.08]">
      <svg width="220" height="160" viewBox="0 0 220 160" class="moka-pot w-36 h-28 md:w-[220px] md:h-[160px]">
        <!-- Bialetti pot tilted to pour -->
        <g transform="translate(0, 30) rotate(-50, 70, 70)">
          <!-- Bottom chamber - octagonal Bialetti shape -->
          <path d="M40 65 L40 115 Q40 128 52 128 L88 128 Q100 128 100 115 L100 65"
                fill="none" stroke="#b4783c" stroke-width="2.5"/>

          <!-- Middle section / filter -->
          <rect x="37" y="55" width="66" height="12" rx="2" fill="none" stroke="#b4783c" stroke-width="2.5"/>

          <!-- Top chamber -->
          <path d="M42 55 L42 38 Q42 28 52 28 L88 28 Q98 28 98 38 L98 55"
                fill="none" stroke="#b4783c" stroke-width="2.5"/>

          <!-- Spout - prominent pouring spout -->
          <path d="M42 38 L28 28 L22 32" fill="none" stroke="#b4783c" stroke-width="3" stroke-linecap="round"/>

          <!-- Lid -->
          <path d="M55 28 L55 22 Q70 14 85 22 L85 28"
                fill="none" stroke="#b4783c" stroke-width="2"/>
          <!-- Knob -->
          <circle cx="70" cy="16" r="5" fill="none" stroke="#b4783c" stroke-width="2"/>

          <!-- Handle -->
          <path d="M100 70 Q120 70 120 92 Q120 114 100 114"
                fill="none" stroke="#b4783c" stroke-width="2.5"/>
        </g>

        <!-- Waveforms dripping/pouring from spout -->
        <g class="waveform-pour">
          <!-- Wave 1 - flows from spout tip -->
          <path class="wave-drip" d="M18 58 Q35 52 55 60 Q75 68 95 62 Q115 56 135 64 Q155 72 175 66 Q195 60 215 68"
                stroke="#b4783c" stroke-width="3" fill="none" stroke-linecap="round"/>
          <!-- Wave 2 -->
          <path class="wave-drip" d="M20 72 Q38 64 58 72 Q78 80 98 74 Q118 68 138 76 Q158 84 178 78 Q198 72 215 80"
                stroke="#b4783c" stroke-width="2.5" fill="none" stroke-linecap="round"/>
          <!-- Wave 3 -->
          <path class="wave-drip" d="M22 86 Q40 78 60 86 Q80 94 100 88 Q120 82 140 90 Q160 98 180 92"
                stroke="#b4783c" stroke-width="2" fill="none" stroke-linecap="round"/>
          <!-- Wave 4 -->
          <path class="wave-drip" d="M24 100 Q42 92 62 100 Q82 108 102 102 Q122 96 142 104 Q162 112 182 106"
                stroke="#b4783c" stroke-width="1.5" fill="none" stroke-linecap="round"/>
        </g>
      </svg>
    </div>

    <!-- Header -->
    <header class="border-b border-neutral-800/50 bg-neutral-950/80 backdrop-blur-xl sticky top-0 z-50">
      <nav class="max-w-6xl mx-auto px-6 py-5 flex justify-between items-center">
        <a href="/" class="text-2xl font-semibold tracking-tight hover:opacity-80 transition-opacity">
          <span class="espresso-text">devspresso</span>
        </a>
        <div class="flex items-center gap-8">
          <a href="/" class="text-neutral-400 hover:text-neutral-100 transition-colors text-sm font-medium tracking-wide uppercase">Home</a>
          <a href="/mixes" class="text-neutral-400 hover:text-neutral-100 transition-colors text-sm font-medium tracking-wide uppercase">Mixes</a>
          <a href="/contact" class="bg-gradient-to-r from-amber-700 to-amber-600 text-white px-5 py-2.5 rounded text-sm font-medium tracking-wide uppercase hover:from-amber-600 hover:to-amber-500 transition-all">Book</a>
        </div>
      </nav>
    </header>

    <main class="flex-grow relative z-10">
      <slot />
    </main>

    <footer class="border-t border-neutral-800/50 mt-24 relative z-10">
      <div class="max-w-6xl mx-auto px-6 py-12">
        <div class="flex flex-col md:flex-row justify-between items-center gap-6">
          <div>
            <span class="espresso-text text-xl font-semibold">devspresso</span>
            <p class="text-neutral-500 text-sm mt-1">Espresso for your ears.</p>
          </div>
          <div class="flex items-center gap-6">
            <a href="https://soundcloud.com/djdevspresso" target="_blank" rel="noopener" class="text-neutral-500 hover:text-amber-500 transition-colors">
