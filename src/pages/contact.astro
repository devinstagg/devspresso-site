---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Book | Devspresso">
  <section class="max-w-2xl mx-auto px-6 py-20">
    <!-- Header -->
    <div class="text-center mb-16">
      <p class="text-amber-600 text-sm font-medium tracking-[0.3em] uppercase mb-4">Get in Touch</p>
      <h1 class="text-4xl md:text-5xl font-bold text-neutral-100 mb-4">Let's Work Together</h1>
      <p class="text-neutral-400 max-w-md mx-auto">
        Looking to book for your next event? Have a question? Drop me a line.
      </p>
    </div>

    <!-- Contact Form -->
    <div class="bg-neutral-900/50 border border-neutral-800 rounded-lg p-8">
      <form
        name="contact"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
        class="space-y-6"
      >
        <input type="hidden" name="form-name" value="contact" />
        <input type="hidden" name="subject" value="New Devspresso form submission" id="form-subject" />
        <p class="hidden">
          <label>Don't fill this out: <input name="bot-field" /></label>
        </p>

        <!-- Name Field -->
        <div>
          <label for="name" class="block text-sm font-medium text-neutral-300 mb-2 tracking-wide">
            Name
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            placeholder="Your name"
            class="w-full px-4 py-3 bg-neutral-950 border border-neutral-800 rounded focus:outline-none focus:border-amber-700 transition-colors text-neutral-100 placeholder-neutral-600"
          />
        </div>

        <!-- Email Field -->
        <div>
          <label for="email" class="block text-sm font-medium text-neutral-300 mb-2 tracking-wide">
            Email
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="you@example.com"
            class="w-full px-4 py-3 bg-neutral-950 border border-neutral-800 rounded focus:outline-none focus:border-amber-700 transition-colors text-neutral-100 placeholder-neutral-600"
          />
        </div>

        <!-- Message Field -->
        <div>
          <label for="message" class="block text-sm font-medium text-neutral-300 mb-2 tracking-wide">
            Message
          </label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            placeholder="Tell me about your event..."
            class="w-full px-4 py-3 bg-neutral-950 border border-neutral-800 rounded focus:outline-none focus:border-amber-700 transition-colors text-neutral-100 placeholder-neutral-600 resize-none"
          ></textarea>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-gradient-to-r from-amber-700 to-amber-600 text-white px-8 py-4 rounded font-medium tracking-wide hover:from-amber-600 hover:to-amber-500 transition-all"
        >
          Send Message
        </button>
      </form>
    </div>

  </section>

  <script>
    const form = document.querySelector('form[name="contact"]');
    const emailInput = document.getElementById('email');
    const subjectInput = document.getElementById('form-subject');

    form?.addEventListener('submit', () => {
      if (emailInput && subjectInput) {
        subjectInput.value = `New Devspresso form submission: ${emailInput.value}`;
      }
    });
  </script>
</BaseLayout>
